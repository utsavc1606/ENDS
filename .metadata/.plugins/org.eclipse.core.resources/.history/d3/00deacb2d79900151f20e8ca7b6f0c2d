import hashlib
import collections

m = hashlib.md5()

inputFile = open("/Users/utsavchatterjee/Documents/Python Projects/ENDS Tweet Analysis/ENDS/Step2Op4Staging.txt", "r")
outputFile1 = open("/Users/utsavchatterjee/Documents/Python Projects/ENDS Tweet Analysis/ENDS/unwantedTweets.txt", "w")
outputFile2 = open("/Users/utsavchatterjee/Documents/Python Projects/ENDS Tweet Analysis/ENDS/unwantedTweetsWithFrequency.txt", "w")
tweetList = []
for line in inputFile:
    tweetText = line.split("-->")[1]
    tweetList.append(tweetText)

counter = collections.Counter(tweetList)
for items in counter.iteritems():
    if items[1] > 3:
        outputFile1.write(items[0])
        outputFile2.write(items[0]+","+str(items[1]).strip(" "))

inputFile.close()
outputFile1.close()
outputFile2.close()